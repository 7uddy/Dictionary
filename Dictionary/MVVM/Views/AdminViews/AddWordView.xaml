<UserControl x:Class="Dictionary.MVVM.Views.AdminViews.AddWordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dictionary.MVVM.Views.AdminViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        
                        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Word" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox Text="{Binding Word}" Grid.Row="0" Grid.Column="1" Margin="5"/>
        <TextBlock Text="Description" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <TextBox Text="{Binding Description}" Grid.Row="1" Grid.Column="1" Margin="5"/>
        <Button Content="Save" Command="{Binding SaveCommand}" Grid.Row="2" Grid.Column="1" Margin="5"/>
            
    </Grid>
</UserControl>
